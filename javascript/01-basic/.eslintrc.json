{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true,
    "browser": true
  },
  "extends": "./node_modules/standard/eslintrc.json",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "never"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "ignore",
        "objects": "ignore",
        "imports": "ignore",
        "exports": "never",
        "functions": "ignore"
      }
    ]
  }
}
